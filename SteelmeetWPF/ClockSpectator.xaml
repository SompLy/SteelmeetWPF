<UserControl x:Class="SteelmeetWPF.ClockSpectator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SteelmeetWPF"
             mc:Ignorable="d" 
             d:DesignHeight="170" d:DesignWidth="800">
    <Grid>
        <Border
            Background="{DynamicResource middleground}"
            BorderBrush="{DynamicResource middleground}"
            BorderThickness="4"
            CornerRadius="8,8,8,8">
            <Grid Background="{DynamicResource middleground}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="38*" />
                    <RowDefinition Height="106*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <!--  Top Texts  -->
                <!--  Timers  -->
                <TextBlock
                        Name="liftTimerSpecTb"
                        Grid.Row="2"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="145"
                        FontFamily="{DynamicResource fontFamily}"
                        FontWeight="DemiBold"
                        Foreground="{DynamicResource fontColorDark}"
                        Text="00:00" />
                <TextBlock
                        Name="smallPieceOfPaperTimerSpecTb"
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="0,-5,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontSize="120"
                        FontWeight="DemiBold"
                        FontFamily="{DynamicResource fontFamily}"
                        Foreground="{DynamicResource fontColorDark}"
                        Text="00:00" />
                <TextBlock
                        Grid.Row="0"
                        Margin="0,-6,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontSize="40"
                        FontWeight="Bold"
                        FontFamily="{DynamicResource fontFamily}"
                        Foreground="{DynamicResource fontColorDark}"
                        Text="Lyft"/>
                <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,-6,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="{DynamicResource fontColorDark}"
                        FontFamily="{DynamicResource fontFamily}"
                        Text="Lapp"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
