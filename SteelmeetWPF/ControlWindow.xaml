<Window
    x:Class="SteelmeetWPF.ControlWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:SteelmeetWPF"
    Title="ControlWindow"
    Width="1920"
    Height="1080"
    KeyDown="HandleInput_KeyDown"
    SizeChanged="MainWindow_SizeChanged"
    WindowStyle="None"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            CornerRadius="4"
            GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>
    <Grid Name="MainGrid">
        <!--  TabControl stretches to fill the entire Grid  -->
        <TabControl Name="MainTc" Style="{DynamicResource TabControlStyleCustom}">
            <!--  Weigh-In TabItem  -->
            <TabItem
                BorderBrush="{x:Null}"
                FontFamily="{DynamicResource fontFamily}"
                FontWeight="Medium"
                FontSize="15"
                Foreground="{DynamicResource fontColorLight}"
                Header="Invägning"
                Style="{DynamicResource TabItemStyleCustom}">
                <Grid Background="{DynamicResource background}">
                    <!--  Base  -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="13*" />
                        <RowDefinition Height="90*" />
                    </Grid.RowDefinitions>
                    <!--  Info panel Base  -->
                    <Grid
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="10"
                        Background="{DynamicResource middleground}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="47*" />
                            <RowDefinition Height="9*" />
                        </Grid.RowDefinitions>
                        <!--  Info  -->
                        <Grid
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="8,8,8,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".20*" />
                                <ColumnDefinition Width=".01*" />
                                <ColumnDefinition Width=".25*" />
                                <ColumnDefinition Width=".01*" />
                                <ColumnDefinition Width=".10*" />
                                <ColumnDefinition Width=".01*" />
                                <ColumnDefinition Width=".40*" />
                            </Grid.ColumnDefinitions>
                            <!--  Logo  -->
                            <Image
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="-4">
                                <Image.Source>
                                    <BitmapImage UriSource="/SMLogoBlack.png" />
                                </Image.Source>
                            </Image>
                            <!--  Buttons  -->
                            <Grid Grid.Row="0" Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Button
                                    Name="ImportBtn"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="2"
                                    Background="Transparent"
                                    BorderBrush="Black"
                                    Click="ImportBtn_Click"
                                    Content="Import"
                                    FontSize="20"
                                    FontFamily="{DynamicResource fontFamily}"
                                    FontWeight="Medium"
                                    Style="{DynamicResource ButtonStyleStandard}" />
                                <Button
                                    Name="ExportBtn"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="2"
                                    Background="Transparent"
                                    BorderBrush="Black"
                                    Click="ExportBtn_Click"
                                    Content="Export"
                                    FontSize="20"
                                    Style="{DynamicResource ButtonStyleStandard}" />
                                <Button
                                    Name="UpdateImportBtn"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="2"
                                    Background="Transparent"
                                    BorderBrush="Black"
                                    Click="UpdateImportBtn_Click"
                                    Content="Update Import"
                                    FontSize="20"
                                    Style="{DynamicResource ButtonStyleStandard}" />
                                <Button
                                    Name="SendToCompetitionBtn"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="2"
                                    Background="#FF126D00"
                                    BorderBrush="Black"
                                    Click="SendToCompetitionBtn_Click"
                                    Content="Send to Compwindow"
                                    FontSize="20"
                                    Style="{DynamicResource ButtonStyleStandard}" />
                            </Grid>
                            <!--  Import Info  -->
                            <Grid Grid.Row="0" Grid.Column="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1.5*" />
                                    <RowDefinition Height="2*" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    FontSize="20"
                                    Foreground="{DynamicResource fontColorDark}"
                                    Text="Invägning - Data : " />
                                <TextBlock
                                    Name="weighInDataTb"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    FontSize="16"
                                    Foreground="{DynamicResource fontColorDark}"
                                    Text="Antal Lyftare : 00&#x0a;Antal Grupper : 00" />
                            </Grid>
                            <!--  Tutorial Text  -->
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="6"
                                VerticalAlignment="Center"
                                FontSize="16"
                                FontWeight="Medium"
                                Foreground="{DynamicResource fontColorDark}"
                                Text="Samtlig information kan korrigeras genom att klicka på texten du vill ändra något&#x0a;Lägg till lyftare : Markera tomma raden längst ner i listan och ange informaiton&#x0a;Ta bort lyftare : Markera lyftaren och klicka &quot;Del&quot; / &quot;Delete&quot; på tagentbordet" />
                        </Grid>
                        <!--  Import Filepath  -->
                        <TextBlock
                            Name="filePathTb"
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="6,-6,0,0"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="{DynamicResource fontColorDark}"
                            Text="Powerlifting software soultions.      Filepath : "
                            FontFamily="Agency FB" />
                    </Grid>
                    <!--  DataGrid  -->
                    <local:DataGirdCustom Style="{DynamicResource DataGirdCustomStyle}"
                        x:Name="weightInDg"
                        Grid.Row="1"
                        Margin="10,0,10,10"
                        d:ItemsSource="{d:SampleData ItemCount=10}"
                        AlternatingRowBackground="{DynamicResource background2}"
                        Background="{DynamicResource background}"
                        BeginningEdit="WeighInDg_BeginningEdit"
                        BorderThickness="0"
                        CanUserAddRows="True"
                        CanUserSortColumns="False"
                        CellEditEnding="WeighInDg_CellEditEnding"
                        ColumnHeaderStyle="{DynamicResource WeighInDataGridColumnHeaderStyle}"
                        HeadersVisibility="Column"
                        RowBackground="{DynamicResource middleground}" />
                </Grid>

            </TabItem>

            <!--  TabItem 2  -->
            <TabItem
                BorderBrush="{x:Null}"
                FontFamily="{DynamicResource fontFamily}"
                FontSize="15"
                Foreground="{DynamicResource fontColorLight}"
                Header="Inställningar"
                Style="{DynamicResource TabItemStyleCustom}">
                <Grid Background="{DynamicResource background}" />
            </TabItem>

            <!--  TabItem 3  -->
            <TabItem
                BorderBrush="{x:Null}"
                FontFamily="{DynamicResource fontFamily}"
                FontSize="15"
                Foreground="{DynamicResource fontColorLight}"
                Header="Tävling"
                Style="{DynamicResource TabItemStyleCustom}">
                <Grid Background="Transparent">
                    <Grid
                        Grid.Row="0"
                        Grid.Column="0"
                        Background="{DynamicResource background}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="13*" />
                            <RowDefinition Height="45*" />
                        </Grid.RowDefinitions>
                        <!--  TopRow  -->
                        <Grid
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="10,10,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="442*" />
                                <ColumnDefinition Width="442*" />
                                <ColumnDefinition Width="194*" />
                                <ColumnDefinition Width="272*" />
                            </Grid.ColumnDefinitions>
                            <Viewbox Grid.Column="0">
                                <local:LifterInfoControl
                                    x:Name="lifterInfo1"
                                    Grid.Column="0"
                                    Margin="0,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top" />
                            </Viewbox>
                            <Viewbox Grid.Column="1">
                                <local:LifterInfoControl
                                    x:Name="lifterInfo2"
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top" />
                            </Viewbox>
                            <Grid Grid.Column="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20*" />
                                    <RowDefinition Height="15*" />
                                </Grid.RowDefinitions>
                                <local:TimerControl x:Name="timerControl" Grid.Row="0" />
                                <local:SuggestedWeightControl
                                    x:Name="suggestedWeightControl"
                                    Grid.Row="1"
                                    Margin="0,10,0,0" />
                            </Grid>
                        </Grid>
                        <!--  Bottom Row  -->
                        <Grid
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="10,10,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1078*" />
                                <ColumnDefinition Width="272*" />
                            </Grid.ColumnDefinitions>
                            <!--  DataGrid  -->
                            <local:DataGirdCustom Style="{DynamicResource DataGirdCustomStyle}"
                                x:Name="controlDg"
                                Grid.Row="1"
                                Margin="10,0,10,10"
                                d:ItemsSource="{d:SampleData ItemCount=10}"
                                AutoGenerateColumns="True"
                                AlternatingRowBackground="{DynamicResource background2}"
                                Background="{DynamicResource background}"
                                BeginningEdit="WeighInDg_BeginningEdit"
                                BorderThickness="0"
                                CanUserAddRows="True"
                                CanUserSortColumns="False"
                                CellEditEnding="WeighInDg_CellEditEnding"
                                ColumnHeaderStyle="{DynamicResource WeighInDataGridColumnHeaderStyle}"
                                HeadersVisibility="Column"
                                RowBackground="{DynamicResource middleground}" />
                            <!--  Right side UserConstrols  -->
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="92*" />
                                    <RowDefinition Height="137*" />
                                    <RowDefinition Height="571*" />
                                </Grid.RowDefinitions>
                                <local:JudgeControl x:Name="judgeControl" />
                                <local:RecordControl
                                    x:Name="recordControl"
                                    Grid.Row="1"
                                    Margin="0,10,0,10" />
                                <Viewbox Grid.Row="2">
                                    <local:LiftingOrderControl 
                                        Margin="0,1,0,10"
                                        Width="343" />
                                </Viewbox>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>

            <!--  TabItem 4  -->
            <TabItem
                BorderBrush="{x:Null}"
                FontFamily="{DynamicResource fontFamily}"
                FontSize="15"
                Foreground="{DynamicResource fontColorLight}"
                Header="Resultat"
                Style="{DynamicResource TabItemStyleCustom}">
                <Grid Background="{DynamicResource background}" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
