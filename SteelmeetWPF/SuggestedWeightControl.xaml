<UserControl
    x:Class="SteelmeetWPF.SuggestedWeightControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SteelmeetWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="86"
    d:DesignWidth="373"
    mc:Ignorable="d">
    <Grid>
        <Border
            Background="{DynamicResource middleground}"
            BorderBrush="{DynamicResource middleground}"
            BorderThickness="4"
            CornerRadius="8,8,8,8">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="6"
                    Opacity="1"
                    ShadowDepth="8"
                    Color="Gray" />
            </Border.Effect>
            <Grid Background="{DynamicResource middleground}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Button
                    Name="_2_5Btn"
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="-1"
                    Background="Transparent"
                    BorderBrush="Black"
                    Click="Suggested_Btn_Click"
                    Content="2.5"
                    Tag="2.5"
                    FontSize="18"
                    Style="{DynamicResource ButtonStyleStandard}" />
                <Button
                    Name="_5Btn"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="-1"
                    Background="Transparent"
                    BorderBrush="Black"
                    Click="Suggested_Btn_Click"
                    Content="5"
                    Tag="5"
                    FontSize="18"
                    Style="{DynamicResource ButtonStyleStandard}" />
                <Button
                    Name="_7_5Btn"
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="-1"
                    Background="Transparent"
                    BorderBrush="Black"
                    Click="Suggested_Btn_Click"
                    Content="7.5"
                    Tag="7.5"
                    FontSize="18"
                    Style="{DynamicResource ButtonStyleStandard}" />
                <Button
                    Name="_10Btn"
                    Grid.Row="0"
                    Grid.Column="3"
                    Margin="-1"
                    Background="Transparent"
                    BorderBrush="Black"
                    Click="Suggested_Btn_Click"
                    Content="10"
                    Tag="10"
                    FontSize="18"
                    Style="{DynamicResource ButtonStyleStandard}" />
                <Button
                    Name="_12_5Btn"
                    Grid.Row="0"
                    Grid.Column="4"
                    Margin="-1"
                    Background="Transparent"
                    BorderBrush="Black"
                    Click="Suggested_Btn_Click"
                    Content="12.5"
                    Tag="12.5"
                    FontSize="18"
                    Style="{DynamicResource ButtonStyleStandard}" />
                <Button
                    Name="_15Btn"
                    Grid.Row="0"
                    Grid.Column="5"
                    Margin="-1"
                    Background="Transparent"
                    BorderBrush="Black"
                    Click="Suggested_Btn_Click"
                    Content="15"
                    Tag="15"
                    FontSize="18"
                    Style="{DynamicResource ButtonStyleStandard}" />
                <Button
                    Name="_17_5Btn"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="-1"
                    Background="Transparent"
                    BorderBrush="Black"
                    Click="Suggested_Btn_Click"
                    Content="17.5"
                    Tag="17.5"
                    FontSize="18"
                    Style="{DynamicResource ButtonStyleStandard}" />
                <Button
                    Name="_20Btn"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="-1"
                    Background="Transparent"
                    BorderBrush="Black"
                    Click="Suggested_Btn_Click"
                    Content="20"
                    Tag="20"
                    FontSize="18"
                    Style="{DynamicResource ButtonStyleStandard}" />
                <Button
                    Name="_25Btn"
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="-1"
                    Background="Transparent"
                    BorderBrush="Black"
                    Click="Suggested_Btn_Click"
                    Content="25"
                    Tag="25"
                    FontSize="18"
                    Style="{DynamicResource ButtonStyleStandard}" />
                <Button
                    Name="__2_5Btn"
                    Grid.Row="1"
                    Grid.Column="3"
                    Margin="-1"
                    Background="Transparent"
                    BorderBrush="Black"
                    Click="Suggested_Btn_Click"
                    Content="-2.5"
                    Tag="-2.5"
                    FontSize="18"
                    Style="{DynamicResource ButtonStyleStandard}" />
                <Button
                    Name="__5Btn"
                    Grid.Row="1"
                    Grid.Column="4"
                    Margin="-1"
                    Background="Transparent"
                    BorderBrush="Black"
                    Click="Suggested_Btn_Click"
                    Content="-5"
                    Tag="-5"
                    FontSize="18"
                    Style="{DynamicResource ButtonStyleStandard}" />
                <Button
                    Name="__7_5Btn"
                    Grid.Row="1"
                    Grid.Column="5"
                    Margin="-1"
                    Background="Transparent"
                    BorderBrush="Black"
                    Click="Suggested_Btn_Click"
                    Content="-7.5"
                    Tag="-7.5"
                    FontSize="18"
                    Style="{DynamicResource ButtonStyleStandard}" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
