<UserControl x:Class="SteelmeetWPF.LifterInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SteelmeetWPF"
             mc:Ignorable="d" 
             Height="224" Width="619">
    <Border  BorderBrush="{DynamicResource middleground}" Background="{DynamicResource middleground}" BorderThickness="4" CornerRadius="8,8,8,8">
        <Border.Effect>
            <DropShadowEffect Color="Gray" Opacity="1" BlurRadius="6" ShadowDepth="8" />
        </Border.Effect>
        <Grid Background="{DynamicResource middleground}">
            <Grid.RowDefinitions>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="14*"/>
            </Grid.RowDefinitions>
            <Viewbox Stretch="Uniform" VerticalAlignment=" Top" HorizontalAlignment="Left" Margin="5,-5,10,-20">
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Name="NameTb"
                           Text="Sara Sandberg" 
                           Foreground="{DynamicResource fontColorDark}" 
                           FontFamily="Cascadia Mono SemiBold" 
                           FontWeight="DemiBold"/>
            </Viewbox>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="283*"/>
                    <ColumnDefinition Width="333*"/>
                </Grid.ColumnDefinitions>
                <Viewbox Grid.Column="1" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,-2,10,-20">
                    <TextBlock Grid.Row="0" Grid.Column="1"
                           Name="TiltedLiftoffTb"
                           Text="Avlyft"
                           Foreground="{DynamicResource fontColorDark}"
                           FontFamily="Cascadia SemiBold" FontWeight="DemiBold"/>
                </Viewbox>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="283*"/>
                    <ColumnDefinition Width="333*"/>
                </Grid.ColumnDefinitions>
                <Viewbox Grid.Column="1" Stretch="Uniform" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,10,-6">
                    <TextBlock Grid.Row="0" Grid.Column="1"
                           Name="WeightTb"
                           Text="200 KG"
                           Foreground="{DynamicResource fontColorDark}" 
                           FontSize="70" FontFamily="Cascadia SemiBold" FontWeight="DemiBold"/>
                </Viewbox>
            </Grid>
        </Grid>
    </Border>
</UserControl>