<UserControl
    x:Class="SteelmeetWPF.LifterInfoControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SteelmeetWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="619"
    Height="224"
    mc:Ignorable="d">
    <Border
        Background="{DynamicResource middleground}"
        BorderBrush="{DynamicResource middleground}"
        BorderThickness="4"
        CornerRadius="8,8,8,8">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="6"
                Opacity="1"
                ShadowDepth="8"
                Color="Gray" />
        </Border.Effect>
        <Grid Background="{DynamicResource middleground}">
            <Grid.RowDefinitions>
                <RowDefinition Height="12*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="14*" />
            </Grid.RowDefinitions>
            <Viewbox
                Margin="5,-5,10,-20"
                HorizontalAlignment="Left"
                VerticalAlignment=" Top"
                Stretch="Uniform">
                <TextBlock
                    Name="NameTb"
                    Grid.Row="0"
                    Grid.Column="0"
                    FontFamily="Cascadia Mono SemiBold"
                    FontWeight="DemiBold"
                    Foreground="{DynamicResource fontColorDark}"
                    Text="Sara Sandberg" />
            </Viewbox>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="283*" />
                    <ColumnDefinition Width="333*" />
                </Grid.ColumnDefinitions>
                <Viewbox
                    Grid.Column="1"
                    Margin="0,-2,10,-20"
                    HorizontalAlignment="Center"
                    Stretch="Uniform">
                    <TextBlock
                        Name="TiltedLiftoffTb"
                        Grid.Row="0"
                        Grid.Column="1"
                        FontFamily="Cascadia SemiBold"
                        FontWeight="DemiBold"
                        Foreground="{DynamicResource fontColorDark}"
                        Text="Avlyft" />
                </Viewbox>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="283*" />
                    <ColumnDefinition Width="333*" />
                </Grid.ColumnDefinitions>
                <Viewbox
                    Grid.Column="1"
                    Margin="0,0,10,-6"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Stretch="Uniform">
                    <TextBlock
                        Name="WeightTb"
                        Grid.Row="0"
                        Grid.Column="1"
                        FontFamily="Cascadia SemiBold"
                        FontSize="70"
                        FontWeight="DemiBold"
                        Foreground="{DynamicResource fontColorDark}"
                        Text="200 KG" />
                </Viewbox>
            </Grid>
        </Grid>
    </Border>
</UserControl>