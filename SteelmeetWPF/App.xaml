<Application
    x:Class="SteelmeetWPF.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="ControlWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
                <!--  Styles  -->
                <ResourceDictionary Source="TabControlStyleCustom.xaml" />
                <ResourceDictionary Source="TabItemStyleCustom.xaml" />
                <ResourceDictionary Source="ButtonStandardCustom.xaml" />
                <ResourceDictionary Source="WeighInDataGridColumnHeaderStyle.xaml" />
                <ResourceDictionary Source="CheckBoxCustomStyle.xaml" />
                <ResourceDictionary Source="DataGridCustom.xaml" />
                <ResourceDictionary Source="ComboBoxCustomStyle.xaml" />
                <ResourceDictionary Source="ButtonBackgroundStyle.xaml" />

                <!--  Default Theme  -->
                <ResourceDictionary Source="Themes/KhakiTheme.xaml" />
                <ResourceDictionary Source="Themes/OGBlue.xaml" />
                <ResourceDictionary Source="Themes/BorlangeTheme.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
