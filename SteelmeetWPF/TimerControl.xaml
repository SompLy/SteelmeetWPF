<UserControl
    x:Class="SteelmeetWPF.TimerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SteelmeetWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="130"
    d:DesignWidth="373"
    mc:Ignorable="d">
    <Grid>
        <Border
            Background="{DynamicResource middleground}"
            BorderBrush="{DynamicResource middleground}"
            BorderThickness="4"
            CornerRadius="8,8,8,8">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="6"
                    Opacity="1"
                    ShadowDepth="8"
                    Color="Gray" />
            </Border.Effect>
            <Grid Background="{DynamicResource middleground}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.2*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <!--  Top Texts  -->
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    FontSize="30"
                    FontWeight="Bold"
                    Foreground="{DynamicResource fontColorDark}"
                    Text="Lyft" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    FontSize="30"
                    FontWeight="Bold"
                    Foreground="{DynamicResource fontColorDark}"
                    Text="Lapp" />
                <!--  Timers  -->
                <TextBlock
                    Name="liftTimerTb"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,-10,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="55"
                    FontWeight="DemiBold"
                    Foreground="{DynamicResource fontColorDark}"
                    Text="00:00" />
                <TextBlock
                    Name="smallPieceOfPaperTimerTb"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,-10,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="55"
                    FontWeight="DemiBold"
                    Foreground="{DynamicResource fontColorDark}"
                    Text="00:00" />
                <!--  Bottom Row  -->
                <Grid Grid.Row="2" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Name="MinutesBtn"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="2,0,2,0"
                        Background="Transparent"
                        BorderBrush="Black"
                        Click="MinutesBtn_Click"
                        Content="Minuter"
                        FontSize="16"
                        Style="{DynamicResource ButtonStyleStandard}" />
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <ComboBox Name="MinutesMinCb" Width="40" />
                        <TextBlock
                            Margin="2,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text=":" />
                        <ComboBox Name="MinutesSecCb" Width="40" />
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="2" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Name="TimestampBtn"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,0,0,0"
                        Background="Transparent"
                        BorderBrush="Black"
                        Click="TimestampBtn_Click"
                        Content="Tidspunkt"
                        FontSize="15"
                        Style="{DynamicResource ButtonStyleStandard}" />
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <ComboBox Name="TimestampMinCb" Width="40" />
                        <TextBlock
                            Margin="2,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text=":" />
                        <ComboBox Name="TimestampSecCb" Width="40" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
